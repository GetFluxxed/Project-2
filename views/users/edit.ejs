<%- include('../partials/header.ejs', {user}) %>
    <div class="field">
        <div class="field">
            <label class="label"> Name</label>
        </div>
        <form method="POST" action="/users/profile/edit?_method=put">
            <div class="field">
                <div class="field">
                    <p class="control is-expanded has-icons-left">
                        <input class="input is-small is-rounded is-warning" type="text" name="user_name" id="user_name"
                            placeholder="<%=`${user.user_name}`%>">
                        <span class="icon is-small is-left">
                            <i class="far fa-address-card"></i>
                        </span>
                    </p>
                </div>
                <div class="field">
                    <p class="control is-expanded has-icons-left">
                        <input class="input is-small is-rounded is-warning" type="text" name="first_name"
                            id="first_name" placeholder="<%=`${user.first_name}`%>">
                        <span class="icon is-small is-left">
                            <i class="far fa-address-card"></i>
                        </span>
                    </p>
                </div>
                <div class="field">
                    <p class="control is-expanded has-icons-left">
                        <input class="input is-small is-rounded is-warning" type="text" name="last_name" id="last_name"
                            placeholder="<%=`${user.last_name}`%>">
                        <span class="icon is-small is-left">
                            <i class="far fa-address-card"></i>
                        </span>
                    </p>
                </div>
            </div>
            <div class="field">
                <div class="field">
                    <p class="control is-expanded has-icons-right">
                        <textarea class="textarea is-small is-rounded is-warning" type="text" name="bio" id="bio"
                            placeholder="<%=`${user.bio}`%>"></textarea>
                        <span class="icon is-small is-right">
                            <i class="far fa-address-card"></i>
                        </span>
                    </p>
                </div>
            </div>
            <div class="field is-grouped is-grouped-centered">
                <button class="button is-rounded is-light is-warning" type="submit" value="update" id="update">Submit
                    Changes to Profile</button>
            </div>
        </form>

        <%- include('../partials/footer.ejs')%>