<%- include('../partials/header.ejs') %>
    <form action="/posts/new" method="post" class="container">
        <div class="field">
            <label for="title" class="label">Title Your Post:</label>
            <div class="control">
                <input class="input is-rounded is-warning" type="text" id="title" name="title" placeholder="Title...">
            </div>
        </div>
        <div class="field">
            <label class="label" for="caption">Caption Your Post:</label>
            <div class="control">
                <textarea class="textarea is-rounded is-warning" id="caption" name="caption"
                    placeholder="Caption..."></textarea>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <label class="checkbox" for="visibility">
                    <input type="checkbox" id="visibility" name="visibility" value="true">
                    Make Your Post Public?
                </label>
            </div>
        </div>
        <div class="field">
            <div class="control">
                <button class="button is-small is-rounded is-warning is-light" type="submit" value="Submit"
                    class="button is-primary">Post</button>
            </div>
        </div>
    </form>
    <%- include('../partials/footer.ejs')%>